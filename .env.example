# Sanity Configuration (content fetch)
# Fill with your actual project values
NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id
NEXT_PUBLIC_SANITY_DATASET=your_dataset_name
SANITY_API_READ_TOKEN=your_sanity_read_token
NEXT_PUBLIC_SANITY_USE_CDN=false

# Sanity Studio (standalone backend URL)
# Usually your Studio runs at localhost during development
NEXT_PUBLIC_SANITY_STUDIO_URL=your_sanity_studio_url
SANITY_STUDIO_PREVIEW_ORIGIN=your_site_url
NEXT_PUBLIC_SITE_URL=your_site_url

# ISR/On-demand revalidation secret
SANITY_REVALIDATE_SECRET=your_revalidate_secret

# Optional basic auth for local dev (format: user:password)
HTTP_BASIC_AUTH=your_basic_auth_user:your_basic_auth_password

# Shopify storefront (optional)
SHOPIFY_STORE_DOMAIN=your_shopify_store_domain
SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_shopify_storefront_access_token

# reCAPTCHA
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Email (Microsoft Graph)
GRAPH_TENANT_ID=your_graph_tenant_id
GRAPH_CLIENT_ID=your_graph_client_id
GRAPH_CLIENT_SECRET=your_graph_client_secret
EMAIL_FROM=your_sender_email
SUPPORT_SENDER_ADDRESS=your_sender_email

# Contact form rate limiting (optional)
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_MAX=5
